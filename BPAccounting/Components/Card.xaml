<UserControl 
    x:Class="BPAccounting.Card"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:BPAccounting"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Margin="24"
    >
    
    <materialDesign:Card 
        Width="300"
        >

        <materialDesign:Card.InputBindings>
            <MouseBinding
                MouseAction="LeftClick"
                Command="{Binding OpenPageCommand}"
                />
        </materialDesign:Card.InputBindings>

        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Image
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Stretch="UniformToFill"
                Source="{Binding CardImage}"
                />

            <TextBlock 
                Text="{Binding Title, FallbackValue=Not working}"
                Grid.ColumnSpan="2"
                Grid.Row="1"
                Style="{StaticResource MaterialDesignTitleTextBlock}"
                Foreground="{DynamicResource SecondaryAccentBrush}"
                Margin="24"
                />

            <TextBlock
                Text="{Binding Subtitle, FallbackValue=Test 1}"
                Grid.Row="2"
                Grid.Column="0"
                Style="{StaticResource MaterialDesignBody1TextBlock}"
                Margin="24 0 24 24"
                />



            <!--<Button Grid.Column="1" Grid.Row="0"
